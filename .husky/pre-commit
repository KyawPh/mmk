#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run checks in the functions directory
cd functions

echo "ğŸ” Running pre-commit checks..."

# Run linter
echo "ğŸ“ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed. Please fix linting errors before committing."
  exit 1
fi

# Check formatting
echo "âœ¨ Checking Prettier formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Prettier check failed. Run 'npm run format' to fix formatting."
  exit 1
fi

# Build TypeScript
echo "ğŸ—ï¸  Building TypeScript..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript build failed. Please fix type errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"